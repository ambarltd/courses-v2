{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.Mvc": "Information",
      "CreditCardEnrollment.Controllers.EnrollmentController": "Information",
      "CreditCardEnrollment.Application.Commands.RequestEnrollment": "Information",
      "CreditCardEnrollment.Application.Queries.GetUserEnrollments": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "EventStore": "Host=localhost;Database=credit_card_enrollment_events;Username=postgres;Password=postgres",
