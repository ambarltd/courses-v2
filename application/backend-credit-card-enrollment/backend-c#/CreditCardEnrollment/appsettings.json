  },
  "EventStore": {
    "TableName": "event_store",
    "EnableReplication": true,
    "ReplicationUser": "replication_username",
    "ReplicationPassword": "replication_password",
    "ReplicationPublication": "replication_publication"
  },
  "MongoDB": {
    "DatabaseName": "projections",
    "ReplicaSetName": "rs0"
  }
